<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button Focused -->
    <item android:drawable="@drawable/bg_primary_rightround_on" android:state_focused="true" android:state_pressed="false" />

    <!-- Button Focused Pressed -->
    <item android:drawable="@drawable/bg_primary_rightround_on" android:state_focused="true" android:state_pressed="true" />


    <!-- Button Pressed -->
    <item android:drawable="@drawable/bg_primary_rightround_on" android:state_focused="false" android:state_pressed="true" />


    <!-- Button Disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_800" />
            <stroke android:width="2dp" android:color="@color/grey_800" />
        </shape>
    </item>

    <!-- Button Default Image -->
    <item android:drawable="@drawable/bg_primary_rightround_off" />

</selector>
