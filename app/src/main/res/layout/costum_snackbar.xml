<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imvSnackBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_mogawexxxhdpi"
        android:layout_margin="@dimen/space"
        android:background="@drawable/btn_mogawe_bg_whitexxxhdpi"/>

    <com.mogawe.mosurvei.util.ui.GalanoTextView
        android:id="@+id/txvSnackBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Hallo MoGawers!!"
        android:textColor="@color/white"
        android:textSize="@dimen/font_xmedium"
        android:layout_margin="@dimen/space"
        android:gravity="center|left"/>

    <com.mogawe.mosurvei.util.ui.GalanoTextView
        android:id="@+id/btnSnackBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textStyle="italic"
        android:text="DISMISS"
        android:textColor="@color/white"
        android:padding="@dimen/space"
        android:gravity="center"/>

</LinearLayout>