<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".view.content.gawean.gaweanku.GaweanInformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/appBar"
            layout="@layout/appbar_light"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/layoutConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/lnrPrb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/space_double">

                <com.mogawe.mosurvei.util.ui.GalanoTextView
                    android:id="@+id/txvLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/space_xhalf"
                    android:text="Memuat..."
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@+id/prbLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </LinearLayout>

            <com.ebanx.swipebtn.SwipeButton
                android:id="@+id/btnSwipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_double"
                android:layout_marginStart="@dimen/space_double"
                android:layout_marginEnd="@dimen/space_double"
                android:layout_marginBottom="@dimen/space"
                app:button_background="@drawable/shape_button_swipe"
                app:button_bottom_padding="20dp"
                app:button_image_disabled="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:button_image_enabled="@drawable/ic_check"
                app:button_left_padding="20dp"
                app:button_right_padding="20dp"
                app:button_top_padding="20dp"
                app:has_activate_state="true"
                app:initial_state="disabled"
                app:inner_text="Geser Untuk Mulai"
                app:inner_text_background="@drawable/bg_circle_swipe_button"
                app:inner_text_bottom_padding="18dp"
                app:inner_text_color="@android:color/white"
                app:inner_text_size="16sp"
                app:inner_text_top_padding="18dp"
                android:visibility="gone"/>

            <com.mogawe.mosurvei.util.ui.GalanoButton
                android:id="@+id/btnApply"
                style="@style/GenericRaisedButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_double"
                android:text="Ambil Gawean"
                android:visibility="gone"/>

        </LinearLayout>

        <com.mogawe.mosurvei.util.ui.FlexSwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutConfirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBar">

            <ScrollView
                android:id="@+id/scrollViewContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space_double">

                    <FrameLayout
                        android:id="@+id/frameWebView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imvJobPicture"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@tools:sample/avatars" />

                        <ProgressBar
                            android:id="@+id/pbTutorial"
                            android:layout_width="@dimen/space_quadruple"
                            android:layout_height="@dimen/space_quadruple"
                            android:layout_gravity="center" />

                    </FrameLayout>

                    <com.mogawe.mosurvei.util.ui.GalanoTextView
                        android:id="@+id/txvIdJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:text="No. 2121021"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_small"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameWebView" />

                    <com.mogawe.mosurvei.util.ui.GalanoTextView
                        android:id="@+id/txvBatchName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="Komando"
                        android:textSize="@dimen/font_small"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txvIdJob" />


                    <com.mogawe.mosurvei.util.ui.GalanoTextView
                        android:id="@+id/txvTitleJobName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="SAT AMD IDM Asem Baris Selatan"
                        android:textSize="@dimen/font_big"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txvBatchName" />

                    <com.mogawe.mosurvei.util.ui.GalanoTextView
                        android:id="@+id/txvJobDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="Tulisan ini hanyalah deskripsinya saja"
                        android:textSize="@dimen/font_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txvTitleJobName" />

                    <com.mogawe.mosurvei.util.ui.GalanoTextView
                        android:id="@+id/txvEndDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/yellow_100"
                        android:padding="@dimen/space_double"
                        android:text="Gawean akan berakhir sebentar lagi!"
                        android:textColor="@color/yellow_900"
                        android:textSize="@dimen/font_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txvJobDescription" />

                    <LinearLayout
                        android:id="@+id/lnrNecessarySkill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/space"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txvEndDesc">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/space_double">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/space_double"
                                android:layout_marginBottom="@dimen/space_double"
                                android:background="@color/grey_300" />

                            <com.mogawe.mosurvei.util.ui.GalanoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Akreditasi yang dibutuhkan"
                                android:textSize="@dimen/font_small"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_double"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvNecessarySkill"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="vertical"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrRefCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrNecessarySkill"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_double"
                            android:layout_marginBottom="@dimen/space_double"
                            android:background="@color/grey_300" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ini Kode Referal Kamu"
                                    android:textStyle="bold" />

                                <com.mogawe.mosurvei.util.ui.GalanoTextView
                                    android:id="@+id/txvRefCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="MOGAWE0XX"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_big" />
                            </LinearLayout>

                            <com.mogawe.mosurvei.util.ui.GalanoButton
                                android:id="@+id/btnCopyRefCode"
                                style="@style/GenericSmallButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/button_primary"
                                android:text="Copy Kode"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_small"
                                android:layout_gravity="center"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrHowTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrRefCode">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_double"
                            android:layout_marginBottom="@dimen/space_double"
                            android:background="@color/grey_300" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.mogawe.mosurvei.util.ui.GalanoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:text="Cara Kerja"
                                android:textSize="@dimen/font_small" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="right">

                                <com.mogawe.mosurvei.util.ui.GalanoButton
                                    android:id="@+id/btnTutorial"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    style="@style/GenericSmallButtonStyle"
                                    android:background="@drawable/button_primary"
                                    android:paddingLeft="@dimen/space_double"
                                    android:paddingRight="@dimen/space_double"
                                    android:text="Link Tutorial"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_small"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </LinearLayout>


                        <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                            android:id="@+id/txvJobHowTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. Cari minimarket di titik lokasi yang sudah ditentukan. \n2. Cari produk susu bubuk merk A, B, dan C.\n3. Buka kuesioner gawean MoGawe.\n4. Lakukan sesuai petunjuk kuesioner"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrAttachments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrHowTo"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_double"
                            android:layout_marginBottom="@dimen/space_double"
                            android:background="@color/grey_300" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_double"
                            android:orientation="vertical">

                            <com.mogawe.mosurvei.util.ui.GalanoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Attachment"
                                android:visibility="visible" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvAttachments"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clipToPadding="false"
                                android:paddingBottom="54dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrJobAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrAttachments">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_double"
                            android:layout_marginBottom="@dimen/space_double"
                            android:background="@color/grey_300" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="@dimen/space"
                                android:src="@drawable/ic_map_black_24dp"
                                app:tint="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.mogawe.mosurvei.util.ui.GalanoTextView
                                    android:id="@+id/txvJobAddressTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lokasi Pekerjaan?"
                                    android:textSize="@dimen/font_small" />

                                <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                    android:id="@+id/txvJobAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Minimarket Cempaka Putih Tengah \nJalan Cempaka Putih tengah V no.10"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/lnrDistance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imvMarkDistance"
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:src="@drawable/ic_location_on_32px"
                                        app:tint="@color/green_600" />

                                    <com.mogawe.mosurvei.util.ui.GalanoTextView
                                        android:id="@+id/txvDistance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2.7 km"
                                        android:textColor="@color/green_600"
                                        android:textSize="@dimen/font_small"/>

                                </LinearLayout>

                                <com.mogawe.mosurvei.util.ui.GalanoButton
                                    android:id="@+id/btnMapNavigation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:text="Navigasi"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_small"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_primary"/>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrEndJob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrJobAddress">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_double"
                            android:layout_marginBottom="@dimen/space_double"
                            android:background="@color/grey_300" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="@dimen/space"
                                android:src="@drawable/ic_baseline_date_range_24"
                                app:tint="@color/green_500" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.mogawe.mosurvei.util.ui.GalanoTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gawean berakhir pada"
                                    android:textSize="@dimen/font_small" />

                                <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                    android:id="@+id/txvEndJob"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Rabu, 17 Maret - 24:00"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_medium"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrEndJob">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_double"
                            android:layout_marginBottom="@dimen/space_double"
                            android:background="@color/grey_300" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="@dimen/space"
                                android:src="@drawable/ic_access_time_black_24dp"
                                app:tint="@color/blue_500" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.mogawe.mosurvei.util.ui.GalanoTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lama Pengerjaan"
                                    android:textSize="@dimen/font_small" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                        android:id="@+id/txvJobDuration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_medium"
                                        android:textStyle="bold" />

                                    <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text=" menit"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_medium"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                     </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrDuration">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_double"
                            android:layout_marginBottom="@dimen/space_double"
                            android:background="@color/grey_300" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="@dimen/space"
                                android:src="@drawable/ic_account_balance_wallet_black_24dp"
                                app:tint="@color/grey_600" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.mogawe.mosurvei.util.ui.GalanoTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Harga"
                                    android:textSize="@dimen/font_small" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp "
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_medium"
                                        android:textStyle="bold" />

                                    <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                        android:id="@+id/txvJobFee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20.000"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_medium"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrFee">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_double"
                            android:layout_marginBottom="@dimen/space_double"
                            android:background="@color/grey_300" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="@dimen/space"
                                android:src="@drawable/ic_card_giftcard_white_24dp"
                                app:tint="@color/grey_600" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.mogawe.mosurvei.util.ui.GalanoTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Point"
                                    android:textSize="@dimen/font_small" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                        android:id="@+id/txvJobPoint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_medium"
                                        android:textStyle="bold" />

                                    <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" pts"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_medium"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnrJobTimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/space"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lnrPoint">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/space_double"
                                android:layout_marginBottom="@dimen/space_double"
                                android:background="@color/grey_300" />

                            <com.mogawe.mosurvei.util.ui.GalanoTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jadwal :"
                                android:textSize="@dimen/font_small"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_double"
                                android:layout_margin="@dimen/space"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvJobTimes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="vertical"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </com.mogawe.mosurvei.util.ui.FlexSwipeRefreshLayout>

        <!-- This initially-hidden ImageView will hold the expanded/zoomed version of
           the images above. Without transformations applied, it takes up the entire
           screen. To achieve the "zoom" animation, this view's bounds are animated
           from the bounds of the thumbnail button above, to its final laid-out
           bounds.
           -->
        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_transparent"
            android:contentDescription="description_zoom_touch_close"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/rltMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="26dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnCloseMap"
                android:layout_width="@dimen/space_triple"
                android:layout_height="@dimen/space_triple"
                android:layout_marginStart="@dimen/spacexx"
                android:layout_marginTop="@dimen/spacex"
                android:background="@drawable/ic_arrow_back_black_24dp" />

            <FrameLayout
                android:id="@+id/containerMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:touchscreenBlocksFocus="true"
                android:visibility="visible">

                <com.mogawe.mosurvei.util.ui.GalanoTextView
                    android:id="@+id/txvLoadingMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Memuat Map..."
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_xbig" />
            </FrameLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/bottom_sheet_skill_detail"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>