<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.content.profile.deals.MyVoucherFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDealsTransactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rltVoucherKosong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">

        <com.mogawe.mosurvei.util.ui.GalanoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/space_double"
            android:layout_marginTop="@dimen/space"
            android:layout_marginRight="@dimen/space_double"
            android:gravity="center"
            android:text="@string/voucherKosong"
            android:textSize="@dimen/font_big" />

    </RelativeLayout>

</RelativeLayout>