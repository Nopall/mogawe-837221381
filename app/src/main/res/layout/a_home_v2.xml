<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.content.home.HomeV2Activity">

    <include
        android:id="@+id/appBar"
        layout="@layout/appbar_light" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBar"
        android:layout_above="@+id/btn_container"
        android:id="@+id/frame_daily_target_fragment"/>

    <RelativeLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Daily Target Surplus"
            android:id="@+id/btn_show_daily_target_surplus_fragment"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="40dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Daily Target Not Reached"
            android:id="@+id/btn_show_daily_target_not_reached_fragment"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="40dp"/>
    </RelativeLayout>

</RelativeLayout>
