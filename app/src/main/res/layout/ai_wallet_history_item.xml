<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mogawe.mosurvei.util.ui.GalanoTextView
        android:textStyle="bold"
        android:id="@+id/txvTglHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamis, 29 maret 2019"
        android:textSize="@dimen/font_medium"
        android:layout_marginStart="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        android:layout_marginTop="@dimen/space" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWalletHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="@dimen/space_double">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                android:textStyle="bold"
                android:id="@+id/txvHoursHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textSize="@dimen/font_small"/>

            <com.mogawe.mosurvei.util.ui.GalanoTextView
                android:id="@+id/txvDescriptionHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembayaran Job 22 - 28 Jan"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|end">

            <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                android:textStyle="bold"
                android:id="@+id/txvNominalHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 150.000"
                android:textColor="@color/green_400" />
        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
