<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:padding="@dimen/space">

    <com.mogawe.mosurvei.util.ui.GalanoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Urutkan berdasarkan : "
        android:layout_margin="@dimen/space_double"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/space_double">
        <RadioButton
            android:id="@+id/rbDefaultSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/sort_matrix_item_sequence" />

        <RadioButton
            android:id="@+id/rbFilledSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_matrix_item_filled" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_double"
        android:orientation="horizontal">

        <com.mogawe.mosurvei.util.ui.GalanoButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batalkan"
            android:background="@null"
            android:textAllCaps="false"
            android:textColor="@color/grey_500"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.mogawe.mosurvei.util.ui.GalanoButton
            android:id="@+id/btnSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"/>

    </LinearLayout>

</LinearLayout>