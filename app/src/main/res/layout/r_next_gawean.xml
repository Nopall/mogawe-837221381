    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/space_double"
        android:paddingTop="@dimen/space_double"
        android:paddingBottom="@dimen/space_double">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_marginEnd="@dimen/space"
            android:layout_marginStart="@dimen/space"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imvJob"
            android:layout_width="@dimen/space_quadruple"
            android:layout_height="@dimen/space_quadruple"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_survey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/space">

            <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                android:id="@+id/txvjobGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observasi Susu Bubuk"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"/>

            <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                android:id="@+id/txvjobNextGawean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observasi Toko Mi SHOP"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                android:id="@+id/txvjobStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                android:id="@+id/txvpriceNextGawean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 10.000"
                android:textColor="@color/red_500"
                android:textSize="@dimen/font_tiny"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/space_half"/>

            <com.mogawe.mosurvei.util.ui.GalanoTextView
                android:id="@+id/btnMulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:paddingStart="@dimen/space_double"
                android:paddingEnd="@dimen/space_double"
                android:paddingTop="@dimen/space"
                android:paddingBottom="@dimen/space"
                android:textColor="@color/white"
                android:textSize="@dimen/font_tiny"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/space"
                android:layout_marginEnd="@dimen/space"
                android:background="@drawable/button_primary"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imbActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/actionOverflowButtonStyle"/>


    </LinearLayout>

