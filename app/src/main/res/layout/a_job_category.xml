<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crdGroupJob"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginEnd="@dimen/space_double">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp">

        <ImageView
            android:id="@+id/imvGroupJobIcon"
            android:layout_width="@dimen/space_xxxtra"
            android:layout_height="@dimen/space_xxxtra"
            android:src="@drawable/circle_shape"/>

        <TextView
            android:id="@+id/txvGroupJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Data Factory"
            android:textColor="#000000"
            android:textStyle="bold"
            android:maxLines="1"/>

        <TextView
            android:maxLines="1"
            android:id="@+id/txvGroupJobCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/label1"
            android:text="1208 jobs for you"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/font_tiny" />

    </LinearLayout>

</androidx.cardview.widget.CardView>