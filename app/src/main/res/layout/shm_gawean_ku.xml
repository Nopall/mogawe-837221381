<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="@dimen/space_xdouble"
        android:layout_marginEnd="@dimen/space_double">
        <View
            android:layout_width="@dimen/space_xdouble"
            android:layout_height="@dimen/space_xdouble"
            android:background="@drawable/skeleton" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:orientation="horizontal"
            android:padding="@dimen/space">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="end"
                android:layout_marginStart="@dimen/space">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_quadruple"
                    android:background="@drawable/skeleton" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="start"
                android:layout_marginEnd="@dimen/space">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_quadruple"
                    android:background="@drawable/skeleton" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:visibility="gone">

                <View
                    android:layout_width="@dimen/shimmer_font_width_medium"
                    android:layout_height="@dimen/font_medium"
                    android:background="@drawable/skeleton" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:paddingLeft="@dimen/space_double"
            android:paddingRight="@dimen/space_double">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_quadruple"
                android:layout_gravity="left"
                android:layout_marginTop="2dp"
                android:background="@drawable/skeleton" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="@dimen/space_double"
            android:paddingStart="@dimen/space_double">

            <View
                android:layout_width="@dimen/shimmer_font_width_wide"
                android:layout_height="@dimen/font_medium"
                android:background="@drawable/skeleton" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="@dimen/space_quadruple"
            android:paddingStart="@dimen/space_double">

            <View
                android:layout_width="@dimen/shimmer_font_width_wide"
                android:layout_height="@dimen/font_medium"
                android:background="@drawable/skeleton" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:layout_marginBottom="@dimen/space"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_double"
                android:paddingRight="@dimen/space_double">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/skeleton_darker" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_double"
                android:paddingRight="@dimen/space_double">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/skeleton_darker" />

            </LinearLayout>

        </LinearLayout>

