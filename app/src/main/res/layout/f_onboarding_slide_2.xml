<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/onboarding_2"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bg_gradient_red_onboarding"
        android:scaleType="centerCrop" />

    <com.mogawe.mosurvei.util.ui.LatoTextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_quadruple"
        android:layout_marginRight="@dimen/space_quadruple"
        android:layout_marginBottom="120dp"
        android:text="@string/onboarding_slide_2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_xxxbig"
        android:textStyle="bold"/>



</RelativeLayout>