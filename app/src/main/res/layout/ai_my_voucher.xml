<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgButtonReward"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image_comingsoon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                    android:textStyle="bold"
                    android:id="@+id/txvMessagePoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saldo Go-Pay"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_xmedium" />

                <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                    android:textStyle="bold"
                    android:id="@+id/voucherPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/space_half"
                    android:text="100pts"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/font_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space"
                    android:orientation="horizontal">

                    <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                        android:textStyle="bold"
                        android:id="@+id/txvStatusTransaction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pending"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/font_medium" />


                    <!--<com.mogawe.mosurvei.util.ui.LatoTextView-->
                    <!--android:id="@+id/txvStatusSent"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Voucher dikirim :"-->
                    <!--android:layout_gravity="right"/>-->

                    <com.mogawe.mosurvei.util.ui.GalanoLightTextView
                        android:textStyle="bold"
                        android:id="@+id/txvTimeStamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25-08-2019" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>