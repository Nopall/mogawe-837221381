<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_footbar_absolute_pos"
    android:baselineAligned="false"
    android:gravity="bottom"
    android:minHeight="56dp"
    android:orientation="horizontal"
    android:padding="@dimen/space_half">

    <LinearLayout
        android:id="@+id/btnHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvHistory"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/space_half"
            android:contentDescription="@string/action.history"
            android:src="@drawable/ic_menu_briefcase" />


        <com.mogawe.mosurvei.util.ui.GalanoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:text="@string/action.gawean" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnCari"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_mogawe_bg_whitexxxhdpi"
            android:padding="@dimen/space">

            <ImageView
                android:id="@+id/imvCariGawean"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:background="@drawable/btn_mogawexxhdpi" />

        </RelativeLayout>

        <com.mogawe.mosurvei.util.ui.GalanoTextView
            android:id="@+id/txvCariGawean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:text="@string/action.cariGawean"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnBantuan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvBantuan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/space_half"
            android:contentDescription="@string/action.bantuan"
            android:src="@drawable/user" />

        <com.mogawe.mosurvei.util.ui.GalanoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:text="@string/action.profile"/>

    </LinearLayout>
</LinearLayout>