<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>

        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:textColorHint">@color/grey_400</item>

<!--        <item name="android:textViewStyle">@style/SegouiTextViewStyle</item>-->
<!--        <item name="android:buttonStyle">@style/SegouiButtonStyle</item>-->
<!--        <item name="editTextStyle">@style/SegouiEditTextStyle</item>-->

    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>

    <style name="markerStyleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roundedBottom" parent="">
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>


    <style name="GenericRaisedButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_reg</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:padding">@dimen/space_double</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GenericRaisedButtonStylePrimary" parent="android:Widget.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/space_double</item>
        <item name="android:paddingEnd">@dimen/space_double</item>
        <item name="android:paddingTop">@dimen/space_xhalf</item>
        <item name="android:paddingBottom">@dimen/space_xhalf</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GenericRaisedButtonStyleWarning" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_warning</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/space_double</item>
        <item name="android:paddingEnd">@dimen/space_double</item>
        <item name="android:paddingTop">@dimen/space_xhalf</item>
        <item name="android:paddingBottom">@dimen/space_xhalf</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GenericRaisedButtonStyleDisabled" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_disabled</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/space_double</item>
        <item name="android:paddingEnd">@dimen/space_double</item>
        <item name="android:paddingTop">@dimen/space_xhalf</item>
        <item name="android:paddingBottom">@dimen/space_xhalf</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GenericSmallButtonStyle" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@drawable/text_toggle_primary</item>
        <item name="android:textSize">@dimen/font_reg</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:padding">@dimen/space</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="GenericRaisedImageButtonStyle" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/button_white</item>
    </style>

    <style name="GenericRaisedImageButtonStyleProduk" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/button_white_rounded_white</item>
    </style>


    <!--RECYCLER VIEW-->
    <style name="GenericRecyclerViewStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

